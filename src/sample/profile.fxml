                       </rowConstraints>
                       <VBox.margin>
                           <Insets left="150.0" top="15.0" />
                       </VBox.margin>
                       <children>
                           <Label fx:id="edit_label" text="All form's fields are required" />
                           <TextField fx:id="edit_name" focusTraversable="false" promptText="Username" GridPane.rowIndex="1" />
                           <PasswordField fx:id="edit_pass" focusTraversable="false" promptText="Password" GridPane.rowIndex="2" />
                           <TextField fx:id="edit_email" focusTraversable="false" promptText="E-Mail" GridPane.rowIndex="3" />
                           <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.rowIndex="6">
                               <children>
                                   <Label text="User Type:" />
                                   <RadioButton mnemonicParsing="false" selected="true" text="Owner">
                                       <toggleGroup>
                                           <ToggleGroup fx:id="userType" />
                                       </toggleGroup></RadioButton>
                                   <RadioButton mnemonicParsing="false" text="Loaner" toggleGroup="$userType" />
                                   <RadioButton mnemonicParsing="false" text="Both" toggleGroup="$userType" />
                               </children>
                           </HBox>
                           <TextField fx:id="edit_address" focusTraversable="false" layoutX="10.0" layoutY="105.0" promptText="Address" GridPane.rowIndex="4" />
                           <TextField fx:id="edit_year" focusTraversable="false" layoutX="10.0" layoutY="140.0" onKeyReleased="#validateYear" promptText="Year of Birth" GridPane.rowIndex="5" />
                           <HBox layoutX="10.0" layoutY="180.0" prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.rowIndex="7">
                               <children>
                                   <Label text="Gender:    " />
                                   <RadioButton mnemonicParsing="false" selected="true" text="Male">
                                       <toggleGroup>
                                           <ToggleGroup fx:id="gender" />
                                       </toggleGroup>
                                   </RadioButton>
                                   <RadioButton mnemonicParsing="false" text="Female" toggleGroup="$gender" />
                                   <Label layoutX="10.0" layoutY="10.0" text="|" />
                                   <CheckBox fx:id="edit_kosher" mnemonicParsing="false" text="Shabat Keeper" />
                               </children>
                           </HBox>
                       </children>
                   </GridPane>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Button fx:id="b_edit_update" mnemonicParsing="false" onAction="#updateUser" styleClass="button" text="Save" />
                     </children>
                  </HBox>
               </children>

<GridPane alignment="center" hgap="10" prefHeight="457.0" prefWidth="699.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ProfileController">
   <children>
      <BorderPane prefHeight="462.0" prefWidth="699.0">
         <top>
            <!--<Label text="Everything4Rent" textAlignment="CENTER" textFill="RED" underline="true" BorderPane.alignment="CENTER">-->

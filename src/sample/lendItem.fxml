<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.updateItemController">
   <children>
      <VBox prefHeight="300.0" prefWidth="300.0">
         <children>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="300.0" spacing="15.0">
               <children>
                  <Label text="Who will you lend your item to?" />
                  <TextField fx:id="lend_filter" onKeyReleased="#filterByName" prefHeight="25.0" prefWidth="105.0" promptText="Filter By Name..">
                     <font>
                        <Font size="11.0" />
                     </font></TextField>
               </children>
            </HBox>
            <ListView fx:id="lend_listView" focusTraversable="false" prefHeight="123.0" prefWidth="300.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>

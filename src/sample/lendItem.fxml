<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.updateItemController">
   <children>
      <VBox alignment="CENTER" prefHeight="350.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="450.0" spacing="15.0">
               <children>
                  <Label text="Who will you lend your item to?" />
                  <TextField fx:id="lend_filter" onKeyReleased="#filterByName" prefHeight="25.0" prefWidth="105.0" promptText="Filter By Name..">
                     <font>
                        <Font size="11.0" />
                     </font></TextField>
               </children>
            </HBox>
            <ListView fx:id="lend_listView" focusTraversable="false" prefHeight="150.0" prefWidth="500.0" />
            <HBox prefHeight="50.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="From" />
                  <DatePicker fx:id="lend_from" editable="false" showWeekNumbers="true" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0" spacing="37.0">
               <children>
                  <Label text="To" />
                  <DatePicker fx:id="lend_to" editable="false" showWeekNumbers="true" />
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#checkToLend" text="Done" textAlignment="CENTER" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>

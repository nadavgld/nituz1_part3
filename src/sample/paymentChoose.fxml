<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.searchController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="350.0" prefWidth="400.0" spacing="15.0">
         <children>
            <HBox prefHeight="24.0" prefWidth="400.0">
               <children>
                  <Label text="Payment Details - " />
                  <Label fx:id="payment_type" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </HBox>
            <Pane prefHeight="174.0" prefWidth="400.0">
               <children>
                  <Pane fx:id="free_pane" cacheShape="false" prefHeight="170.0" prefWidth="400.0" visible="false">
                     <VBox alignment="CENTER_LEFT" prefHeight="170.0" prefWidth="360.0" spacing="10.0">
                        <children>
                           <Label text="Just pick your dates and you're done">
                              <VBox.margin>
                                 <Insets bottom="5.0" left="15.0" />
                              </VBox.margin>
                           </Label>
                            <HBox prefHeight="11.0" prefWidth="360.0" spacing="12">
                                <children>
                                    <Label text="From" />
                                    <DatePicker fx:id="lend_from_free" editable="false" prefWidth="150" showWeekNumbers="true" />
                                </children>
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                                <padding>
                                    <Insets left="15.0" />
                                </padding>
                            </HBox>
                            <HBox prefHeight="20.0" prefWidth="360.0" spacing="30">
                                <children>
                                    <Label text="To" />
                                    <DatePicker fx:id="lend_to_free" editable="false" prefWidth="150" showWeekNumbers="true" />
                                </children>
                                <padding>
                                    <Insets left="15.0" />
                                </padding>
                            </HBox>

                        </children>
                     </VBox>
                  </Pane>
      
                   <Pane fx:id="loan_pane" cacheShape="false" prefHeight="170.0" prefWidth="400.0" visible="false">
                   <VBox alignment="CENTER_LEFT" prefHeight="170.0" prefWidth="360.0" spacing="10.0">
                       <children>
                           <Label fx:id="loan_price" text="Just pick your dates and you're done, Your wished item's price is " wrapText="true">
                               <VBox.margin>
                                   <Insets bottom="5.0" left="15.0" />
                               </VBox.margin>
                           </Label>
                           <HBox prefHeight="11.0" prefWidth="360.0" spacing="12">
                               <children>
                                   <Label text="From" />
                                   <DatePicker fx:id="lend_from_loan" editable="false" prefWidth="150" showWeekNumbers="true" />
                               </children>
                               <VBox.margin>
                                   <Insets />
                               </VBox.margin>
                               <padding>
                                   <Insets left="15.0" />
                               </padding>
                           </HBox>
                           <HBox prefHeight="20.0" prefWidth="360.0" spacing="30">
                               <children>
                                   <Label text="To" />
                                   <DatePicker fx:id="lend_to_loan" editable="false" prefWidth="150" showWeekNumbers="true" />
                               </children>
                               <padding>
                                   <Insets left="15.0" />
                               </padding>
                           </HBox>
                       </children>
                   </VBox>
               </Pane>

                   <Pane fx:id="trade_pane" cacheShape="false" prefHeight="170.0" prefWidth="400.0" visible="false">
                       <VBox alignment="CENTER_LEFT" prefHeight="170.0" prefWidth="400.0" spacing="7.0">
                           <children>
                               <Label fx:id="trade_price" text="Pick your dates, and offer something in exchange">
                                   <VBox.margin>
                                       <Insets bottom="5.0" left="15.0" />
                                   </VBox.margin>
                               </Label>
                               <HBox prefHeight="11.0" prefWidth="360.0" spacing="12">
                                   <children>
                                       <Label text="From" />
                                       <DatePicker fx:id="lend_from_trade" editable="false" prefWidth="150" showWeekNumbers="true" />
                                   </children>
                                   <VBox.margin>
                                       <Insets />
                                   </VBox.margin>
                                   <padding>
                                       <Insets left="15.0" />
                                   </padding>
                               </HBox>
                               <HBox prefHeight="20.0" prefWidth="360.0" spacing="30">
                                   <children>
                                       <Label text="To" />
                                       <DatePicker fx:id="lend_to_trade" editable="false" prefWidth="150" showWeekNumbers="true" />
                                   </children>
                                   <padding>
                                       <Insets left="15.0" />
                                   </padding>
                               </HBox>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="30">
                              <children>
                                 <CheckBox mnemonicParsing="false" onAction="#toggleItemList" text="Item from your list" />
                                 <ChoiceBox fx:id="lend_itemList" prefWidth="150.0" visible="false" />
                              </children>
                               <padding>
                                   <Insets left="15.0" />
                               </padding>
                           </HBox>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="30">
                              <children>
                                 <CheckBox mnemonicParsing="false" onAction="#toggleMoneyField" text="Extra money" />
                                 <TextField fx:id="lend_money" onKeyReleased="#tradeAmountValidation" prefWidth="150.0" promptText="Insert Amount ($)" visible="false">
                                    <HBox.margin>
                                       <Insets left="41.0" />
                                    </HBox.margin></TextField>
                              </children>
                               <padding>
                                   <Insets left="15.0" />
                               </padding>
                           </HBox>
                           </children>
                       </VBox>
                   </Pane>
               </children>
            </Pane>
            <Label prefWidth="360.0" text="Once you'll continue, a request will be sent to the owner for approval." wrapText="true">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#stepBackFromPayment" prefHeight="31.0" prefWidth="170.0" text="Back" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#checkOut" prefHeight="31.0" prefWidth="170.0" text="Continue" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
